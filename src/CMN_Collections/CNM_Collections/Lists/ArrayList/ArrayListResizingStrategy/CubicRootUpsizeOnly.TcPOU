.. _Apache-2.0: https://www.apache.org/licenses/LICENSE-2.0

.. </legal notes>

*)

{attribute 'enable_dynamic_creation'}
FUNCTION_BLOCK CubicRootUpsizeOnly EXTENDS CNM_AbstractObject.Object IMPLEMENTS CNM_CollectionInterfaces.IResizingStrategy
VAR CONSTANT
	(* cubic root of 2 *)
	GROW_FACTOR :REAL := 1.259921049894873165;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[]]></ST>
    </Implementation>
